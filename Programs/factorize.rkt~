(define (a2-b2? expr)
  (and (list? expr)
       (= (length expr) 3)
       (eq? (car expr) '-)
       (list? (cadr expr))
       (eq? 'expt (car (cadr expr)))
       (eq? 'expt (car (caddr expr)))
       (= 2 (caddr (cadr expr)))
       (= 2 (caddr (caddr expr)))))

(define (a3-b3? expr)
  (and (list? expr)
       (= (length expr) 3)
       (eq? (car expr) '-)
       (list? (cadr expr))
       (eq? 'expt (car (cadr expr)))
       (eq? 'expt (car (caddr expr)))
       (= 3 (caddr (cadr expr)))
       (= 3 (caddr (caddr expr)))))

(define (a3+b3? expr)
  (and (list? expr)
       (= (length expr) 3)
       (eq? (car expr) '+)
       (list? (cadr expr))
       (eq? 'expt (car (cadr expr)))
       (eq? 'expt (car (caddr expr)))
       (= 3 (caddr (cadr expr)))
       (= 3 (caddr (caddr expr)))))